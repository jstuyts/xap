<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>xap-common-package</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>product/lib/required</outputDirectory>
			<includes>
				<include>org.gigaspaces:xap-common</include>
				<include>org.gigaspaces:xap-asm</include>
				<include>org.gigaspaces:xap-trove</include>
				<include>org.gigaspaces:xap-datagrid</include>
				<include>org.gigaspaces:xap-openspaces</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>product/lib/optional/sigar</outputDirectory>
			<includes>
				<include>org.hyperic:sigar</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>product/lib/optional/oshi</outputDirectory>
			<includes>
				<include>com.github.oshi:oshi-core</include>
				<include>net.java.dev.jna:jna</include>
				<include>net.java.dev.jna:jna-platform</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
	</dependencySets>
</assembly>